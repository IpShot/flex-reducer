{
  "name": "flex-reducer",
  "version": "1.0.4",
  "description": "React Hooks based app state manager",
  "keywords": [
    "react",
    "reactjs",
    "react-app",
    "react-hooks",
    "reducer",
    "selector",
    "data",
    "store"
  ],
  "license": "MIT",
  "author": "Roman Zhernosek <roman@zhernosek.com>",
  "homepage": "https://github.com/IpShot/flex-reducer",
  "repository": "github:IpShot/flex-reducer",
  "bugs": "https://github.com/IpShot/flex-reducer/issues",
  "main": "./lib/index.js",
  "unpkg": "dist/flex-reducer.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "lib",
    "src",
    "es"
  ],
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "babel src --out-dir es",
    "build:umd": "cross-env NODE_ENV=development rollup -c -o dist/flex-reducer.js",
    "build:umd:min": "cross-env NODE_ENV=production rollup -c -o dist/flex-reducer.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist es coverage",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "coverage": "codecov"
  },
  "peerDependencies": {
    "react": "^16.8.3"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@testing-library/react": "^10.4.3",
    "@testing-library/react-hooks": "^3.3.0",
    "codecov": "^3.7.0",
    "cross-env": "^7.0.2",
    "jest": "^26.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.18.2",
    "rollup-plugin-terser": "^6.1.0"
  }
}
